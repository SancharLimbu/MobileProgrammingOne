<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:text="@string/hello"
        android:textColor="@color/gruv_white"
        android:background="@color/gruv_red"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:textAlignment="center"
        android:textColor="@color/gruv_white"
        android:background="@color/gruv_yellow"
        android:padding="10dp"
        android:textSize="30sp"
        android:layout_below="@+id/text_one"
        android:layout_toEndOf="@+id/text_one" />

    <TextView
        android:id="@+id/text_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:textAlignment="center"
        android:textColor="@color/gruv_white"
        android:padding="10dp"
        android:background="@color/gruv_black"
        android:textSize="30sp"
        android:layout_below="@+id/text_two"
        android:layout_toEndOf="@+id/text_two" />
</RelativeLayout>